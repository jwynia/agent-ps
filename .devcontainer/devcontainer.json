// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "MMMemory Dev (Node + Bun + Deno + Claude)",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerFile": "Dockerfile",
	// typescript-node:24 base uses 'node' user, not 'vscode'
	"remoteUser": "node",
	"containerEnv": {
		"XDG_CONFIG_HOME": "/workspaces/${localWorkspaceFolderBasename}/.agents/config",
		"XDG_DATA_HOME": "/workspaces/${localWorkspaceFolderBasename}/.agents/data",
		"XDG_CACHE_HOME": "/workspaces/${localWorkspaceFolderBasename}/.agents/cache",
		"XDG_STATE_HOME": "/workspaces/${localWorkspaceFolderBasename}/.agents/state",
		"CLAUDE_CONFIG_DIR": "/workspaces/${localWorkspaceFolderBasename}/.claude"
	},
	"runArgs": [
		"--env-file",
		"${localWorkspaceFolder}/.devcontainer/.env"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],
	// Configure tool-specific properties.
	// "customizations": {},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// Ensure config directories exist (they're in the workspace which is mounted)
	"postCreateCommand": "mkdir -p .agents/{config,data,cache,state} .claude"
}